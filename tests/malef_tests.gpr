with "config/malef_tests_config.gpr";
project Malef_Tests is

   for Source_Dirs use ("src/", "config/");
   for Object_Dir use "obj/" & Malef_Tests_Config.Build_Profile;
   for Create_Missing_Dirs use "True";
   for Exec_Dir use "bin";
   for Main use ("malef_tests.adb");

   package Compiler is
      for Default_Switches ("Ada") use Malef_Tests_Config.Ada_Compiler_Switches &
         ( "-gnaty-I"
         , "-gnatyC"
         , "-gnatyM81"
         , "-g"
         , "-gnat2022"
         , "-gnatwJ"
         , "-gnatW8"
         );
   end Compiler;

   package Binder is
      for Switches ("Ada") use ("-Es"); --  Symbolic traceback
   end Binder;

   package Install is
      for Artifacts (".") use ("share");
   end Install;

end Malef_Tests;
